
@{
    ViewBag.Title = "CreateCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Course</h2>
@using (Html.BeginForm())
{
    <div class="form-group row">
        @Html.Label("Name")
        @Html.TextBox("Name", null, new {@class="form-control"})
    </div>
    <div class="form-group row">
        @Html.Label("Description")
        @Html.TextBox("Description", null, new { @class = "form-control" })
    </div>
    <div class="form-group row">
        @Html.Label("Start Date")
        @Html.TextBox("StartDate", null, new { @class = "form-control", type="date" })
    </div>
    <div class="form-group row">
        @Html.Label("End Date")
        @Html.TextBox("EndDate", null, new { @class = "form-control" })
    </div>
    <div class="form-group row">
        @Html.Label("Treiner todo")
      
        @Html.TextBox("Treiner", null, new { @class = "form-control" })
      
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-default btn-lg" value="Create course"/>
    </div>
}

