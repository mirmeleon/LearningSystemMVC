@model demos.Models.ViewModels.Users.EditUserViewModel
@{
    ViewBag.Title = "Edit profile";
}

<h2>Edit profile</h2>

@using (Html.BeginForm())
{
   

    <div class="form-group">
        @Html.LabelFor(vm => vm.Email)
        @Html.EditorFor(vm => vm.Email, new {htmlAttributes = new {@class="form-control"}})
    </div>

    <div class="form-group">
        @Html.LabelFor(vm => vm.Name)
        @Html.EditorFor(vm => vm.Name, new {htmlAttributes = new {@class="form-control"}})
    </div>
    <div class="form-group">
        <input type="submit" value="Edit" class="form-control" />
    </div>
}
